<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".detail.PopularDetailFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- TODO: Update blank fragment layout -->
        <ImageView
            android:layout_marginTop="100dp"
            android:id="@+id/movieDetailImage"
            android:layout_width="180dp"
            android:layout_height="300dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <TextView
            android:layout_marginLeft="15dp"
            android:layout_marginTop="180dp"
            android:id="@+id/movieDetailTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Movie Title"
            app:layout_constraintLeft_toRightOf="@+id/movieDetailImage"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:id="@+id/DetailDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Released Date:    "
            app:layout_constraintTop_toBottomOf="@+id/movieDetailTitle"
            app:layout_constraintLeft_toRightOf="@+id/movieDetailImage"/>

        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/movieDetailDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            app:layout_constraintTop_toBottomOf="@+id/movieDetailTitle"
            app:layout_constraintLeft_toRightOf="@+id/DetailDate"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/DetailOverview"
            android:text="Overview:"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/movieDetailImage"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/movieDetailOverview"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/DetailOverview"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/vote"
            android:textColor="#000"
            android:text="Vote Count:   "
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/DetailDate"
            app:layout_constraintLeft_toRightOf="@+id/movieDetailImage"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/voteCount"
            android:textColor="#0366FB"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            app:layout_constraintTop_toBottomOf="@+id/DetailDate"
            app:layout_constraintLeft_toRightOf="@+id/vote"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>